
public class Main {
	
	static int size = 16;
	static Integer[] stuff;
	
	public static void main(String[] args) {
		
		for (int i = 0; i < stuff.length; i++){			
            stuff[i] = new Integer ((int) (Math.random() * size));
        }
        bubbleSort(stuff);
		System.out.println("Bubble Sort:");
        long start = System.currentTimeMillis();
        System.out.printf("The time in milliseconds to sort ", size, " items was: ", System.currentTimeMillis() - start ,
        		"\n Comparisons:", comp,
        		"\n Copies:", copy);
        
//        insertionSort(stuff);
//		System.out.println("InsertionSort:");
//        start = System.currentTimeMillis();
//        System.out.printf("The time in milliseconds to sort ", size, " items was: ", System.currentTimeMillis() - start ,
//        		"\n Comparisons:", comp,
//        		"\n Copies:", copy);     
	}
	
	static int comp;
	static int copy;
	
	public static void bubbleSort(Integer[] stuff){
		int n = stuff.length;
		int temp = 0;
		
	    for(int i=0; i < n; i++){
	           for(int j=1; j < (n-i); j++){
	        	   comp ++;	        	   
	        	   if(stuff[j-1] > stuff[j]){	
	        		   copy ++;
	        		   temp = stuff[j-1];
	        		   stuff[j-1] = stuff[j];
	        		   stuff[j] = temp;	                         
	                  }
	           }
	    }
	}
	
	public static void insertionSort(Integer[] stuff){
		
	}

}
